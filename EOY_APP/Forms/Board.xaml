<Window x:Class="EOY_APP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EOY_APP"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1080" Width="1980"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    <Grid Background="White">

        <Grid x:Name="Sidebar" HorizontalAlignment="Left" Width="170">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFF5200"/>
                    <GradientStop Color="#FF0542FD" Offset="1"/>
                    <GradientStop Color="#FFFDAE00" Offset="0.327"/>
                    <GradientStop Color="#FFE12DFF" Offset="0.601"/>
                    <GradientStop Color="#FF0206E4" Offset="0.82"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image Height="81" Margin="0,0,1,0" VerticalAlignment="Top" Source="/Forms/8791959.png"/>
            <Button Content="&#xA;" HorizontalAlignment="Center"  Margin="0,86,0,0" VerticalAlignment="Top" Height="65" Width="98" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Cursor="Hand" Foreground="White" FontSize="16" BorderThickness="0,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Forms/Bez názvu-4.png" Stretch="Uniform">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="0"/>
                                <SkewTransform AngleX="0" CenterX="0"/>
                                <RotateTransform CenterX="0"/>
                                <TranslateTransform Y="0" X="0"/>
                            </TransformGroup>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Button.Background>
            </Button>
            <Button x:Name="admin_btn" Click="admin_btn_Click" Content="&#xA;" HorizontalAlignment="Center"  Margin="0,156,0,0" VerticalAlignment="Top" Height="65" Width="98"  RenderTransformOrigin="0.5,0.5" Cursor="Hand" Foreground="White" FontSize="16" BorderThickness="0,0,0,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Forms/Bez názvu-5.png" Stretch="Uniform">
                        <ImageBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="0"/>
                                <SkewTransform AngleX="0" CenterX="0"/>
                                <RotateTransform CenterX="0"/>
                                <TranslateTransform Y="0" X="0"/>
                            </TransformGroup>
                        </ImageBrush.RelativeTransform>
                    </ImageBrush>
                </Button.Background>
            </Button>



        </Grid>
        <Grid Margin="175,0,0,0"/>

        <Grid x:Name="monitor_grid" Height="986" VerticalAlignment="Bottom" Margin="175,0,0,0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFFFBD09" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>


    </Grid>

</Window>
