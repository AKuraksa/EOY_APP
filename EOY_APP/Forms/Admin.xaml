<UserControl x:Class="EOY_APP.Forms.Admin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EOY_APP.Forms"
             mc:Ignorable="d" 
             Name="display"
             Loaded="UserControl_Loaded"
             d:DesignHeight="500" d:DesignWidth="1000">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Vytvořit uživatele" Height="50" Click="addUser"/>
            <Button Grid.Column="1" Content="Editovat uživatele" Height="50" Click="editUser"/>
            <Button Grid.Column="2" Content="Reporty" Height="50" Click="reports"/>
            <Button Grid.Column="3" Content="Editace hlášek" Height="50" Click="editReports"/>
        </Grid>
        
        <Grid x:Name="panels" Grid.Row="1"/>

    </Grid>

</UserControl>
