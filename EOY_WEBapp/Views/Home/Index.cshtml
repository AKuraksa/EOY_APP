
@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="~/css/StyleHome.css" asp-append-version="true" />
<header>
    <nav>
        <ul class="main-menu">
            <!-- První hlavní položka -->
            <li>
                <a href="#">Sledovací panel</a>
                <ul class="sub-menu">
                    <li><a href="#">A</a></li>
                    <li><a href="#">B</a></li>
                    <li><a href="#">C</a></li>
                </ul>
            </li>

            <!-- Druhá hlavní položka -->
            <li>
                <a href="#">Reporty</a>
                <ul class="sub-menu">
                    <li><a href="#">A</a></li>
                    <li><a href="#">B</a></li>
                    <li><a href="#">C</a></li>
                </ul>
            </li>

            <!-- Třetí hlavní položka -->
            <li>
                <a href="#">Nastavení</a>
                <ul class="sub-menu">
                    <li><a href="#">@Html.ActionLink("Administrace","AccountSettings")</a></li>
                    <li><a href="#">Podpoložka 3.2</a></li>
                    <li><a href="#">Podpoložka 3.3</a></li>
                </ul>
            </li>
        </ul>
    </nav>
</header>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Přidat klikací událost pro každou hlavní položku
        $(".main-menu > li > a").click(function (e) {
            e.preventDefault(); // Zabránit výchozímu chování odkazu

            // Skrýt všechny podpoložky
            $(".sub-menu").slideUp();

            // Najít podpoložky pro tuto hlavní položku a zobrazit je
            $(this).next(".sub-menu").slideDown();
        });

        // Skrýt všechny podpoložky při načtení stránky
        $(".sub-menu").hide();
    });
</script>